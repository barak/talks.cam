<div class='listresult'>
<% number_of_talks = list_result.talks.count %>
<% number_of_future_talks = Talk.count( :joins => "INNER JOIN list_talks ON talks.id = list_talks.talk_id", :conditions => ['(list_talks.list_id = ?) AND (start_time >= ?)', list_result.id, @time_at_beginning_of_day ] )
#list_result.talks.count( :conditions => ['start_time >= ?', @time_at_beginning_of_day ] ) %>
<%= link_to list_result.name, list_url(:id => list_result) %> <span class='count'>&#8211; <%= pluralize number_of_talks, "talk" %> of which <%= number_of_future_talks %> are upcoming.</span>
</div>
